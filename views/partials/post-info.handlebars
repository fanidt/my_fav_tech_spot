    <article class="post">
      <div class="title">
        <span><a href="/post/{{id}}">{{title}}</a></span><span style="float:right">Posted by {{user.username}} on {{format_date created_at}}</span><br>
       
      </div>
      <div class = "content">
          <p>{{post_text}}</p>
           <span>{{comments.length}} {{format_plural "comment" comments.length}}</span>
      </div>
    </article>